<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="10fp">

    <Text
        ohos:id="$+id:header"
        ohos:text_alignment="center"
        ohos:horizontal_center="true"
        ohos:vertical_center="true"
        ohos:top_margin="20fp"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="CacheUtils Demo"
        ohos:bottom_padding="300fp"
        ohos:text_size="30fp"/>

    <DependentLayout
        ohos:id="$+id:box"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="vertical_center"
        ohos:padding="10fp">

    <Text
        ohos:id="$+id:text"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Choose the data type you want to write/read"
        ohos:text_size="15fp"
        ohos:below="$id:header"/>

    <RadioContainer
        ohos:id="$+id:radioGroup"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:layout_alignment="left"
        ohos:layout_direction="ltr"
        ohos:top_margin="16fp"
        ohos:below="$id:text">

        <RadioButton
            ohos:id="$+id:string"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:check_element="true"
            ohos:enabled="true"
            ohos:focusable_in_touch="true"
            ohos:text="$string:rb_string"/>

        <RadioButton
            ohos:id="$+id:map"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:rb_map"
            ohos:check_element="false"
            ohos:enabled="true"
            ohos:focusable_in_touch="true"/>

        <RadioButton
            ohos:id="$+id:listmap"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:rb_listmap"
            ohos:check_element="false"
            ohos:enabled="true"
            ohos:focusable_in_touch="true"/>

        <RadioButton
            ohos:id="$+id:object"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:rb_object"
            ohos:check_element="false"
            ohos:enabled="true"
            ohos:focusable_in_touch="true"/>

        <RadioButton
            ohos:id="$+id:listobject"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:rb_listobject"
            ohos:check_element="false"
            ohos:enabled="true"
            ohos:focusable_in_touch="true"/>
    </RadioContainer>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:below="$id:radioGroup"
        ohos:top_margin="16fp"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:write"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:margin="4fp"
            ohos:padding="5fp"
            ohos:weight="1"
            ohos:background_element="$graphic:background_button"
            ohos:text_weight="700"
            ohos:text_color="#ffffff"
            ohos:text="WRITE"/>

        <Button
            ohos:id="$+id:read"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:margin="4fp"
            ohos:padding="5fp"
            ohos:weight="1"
            ohos:background_element="$graphic:background_button"
            ohos:text_color="#ffffff"
            ohos:text_weight="700"
            ohos:text="READ"/>
    </DirectionalLayout>

    </DependentLayout>
</DependentLayout>

